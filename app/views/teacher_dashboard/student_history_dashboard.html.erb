<head>
  <%= stylesheet_link_tag 'student_history_dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@latest/dist/full.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body style="background-color: #9aa8c5;">
  <div class="student-history-dashboard">
    <!-- Navbar -->
    <div class="navbar bg-black text-white px-6 w-full fixed top-0 z-50">
      <div class="flex-1">
        <a href="/teacher_dashboard" class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
          Dashboard
        </a>
      </div>
      <div class="flex-none">
        <div class="dropdown dropdown-end">
          <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
            Account ▼
          </button>
          <ul class="dropdown-content menu p-2 shadow bg-black text-white rounded-box w-36">
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>

    <%= link_to "←", teacher_dashboard_path, class: "back-arrow fixed left-4 top-16 text-2xl z-50" %>

    <main class="pt-24 p-4">
      <!-- Page Title -->
      <h1 class="text-center text-5xl font-bold text-gray-800 mb-8">
        Student History Dashboard
      </h1>
      
      <!-- Semester Filter -->
      <div class="w-full flex justify-center mb-6">
        <form method="get" action="<%= student_history_dashboard_path %>" class="flex items-center space-x-2 bg-black text-white p-3 rounded-lg">
          <label for="semester_id" class="font-semibold">Filter by Semester:</label>
          <select name="semester_id" id="semester_id" class="select select-sm bg-gray-800 text-white border-gray-700">
            <option value="">All Semesters</option>
            <% @semesters.each do |semester| %>
              <option value="<%= semester.id %>" <%= "selected" if semester.id.to_s == params[:semester_id].to_s %>><%= semester.name %></option>
            <% end %>
          </select>
          <button type="submit" class="btn btn-sm btn-primary">Apply</button>
        </form>
      </div>
      
      <div class="tables-container">
        <!-- Summary Table -->
        <div class="table-wrapper w-3/5">
          <h2>Class Performance</h2>
          <div class="scrollable">
            <table>
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Attempted</th>
                  <th>Performance</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="font-bold">Total Completed</td>
                  <td><%= @total_completed[:attempted] %></td>
                  <td><%= "#{@total_completed[:correct]} / #{@total_completed[:attempted]} - #{@total_completed[:percentage]}%" %></td>
                </tr>
                <% @category_summaries.each do |category, stats| %>
                  <tr>
                    <td><%= category %></td>
                    <td><%= stats[:attempted] %></td>
                    <td><%= "#{stats[:correct]} / #{stats[:attempted]} - #{stats[:percentage]}%" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Students Table -->
        <div class="table-wrapper w-2/5">
          <h2>Students</h2>
          <div class="search-form">
            <%= form_with url: student_history_dashboard_path, method: :get, local: true do %>
              <% if params[:semester_id].present? %>
                <%= hidden_field_tag :semester_id, params[:semester_id] %>
              <% end %>
              <%= text_field_tag :search, params[:search], placeholder: "Search by name or email", class: "p-2 rounded-md border border-gray-300 w-full bg-white text-black focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <%= submit_tag "Search", class: "mt-2 px-4 py-2 bg-black text-white rounded-md hover:bg-blue-600 transition cursor-pointer w-full font-semibold", style: "background-color: #000000;" %>
            <% end %>
          </div>
          <div class="scrollable">
            <table>
              <thead>
                <tr>
                  <th>Student Name</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
                <% @students.each do |student| %>
                  <tr>
                    <td><%= link_to "#{student.first_name} #{student.last_name}", student_history_path(student_email: student.email, semester_id: params[:semester_id]) %></td>
                    <td><%= student.email %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>