<!-- app/views/practice_problems/index.html.erb -->
<div class="min-h-screen w-full flex flex-col bg-[#9aa8c5]">
  <!-- Navbar (Fixed at Top) -->
  <div class="navbar bg-black text-white px-6 w-full fixed top-0">
    <!-- Left: Past Problems Button -->
    <div class="flex-1">
      <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
        Past Problems
      </button>
    </div>
    <!-- Right: Account Dropdown -->
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
          Account â–¼
        </button>
        <ul class="dropdown-content menu p-2 shadow bg-black text-white rounded-box w-36">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Centered Content -->
  <div class="flex flex-col items-center justify-center flex-grow w-full text-center">
    <h1 class="text-5xl font-bold mb-8 text-black">Select Category</h1>

    <!-- Problem Grid -->
    <div class="w-full max-w-screen-xl grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-6">
      <% @categories.each do |category| %>
        <%= link_to category.name,
            generate_practice_problems_path(category_id: category.id),
            class: "btn bg-[#9aa8c5] text-black border border-blue-500 hover:border-blue-700 hover:bg-blue-500 hover:text-white text-lg font-semibold aspect-square flex items-center justify-center text-center shadow-lg hover:scale-105 transition-transform p-4" %>
      <% end %>
    </div>
  </div>
</div>
