<!-- app/views/practice_problems/generate.html.erb -->
<div class="min-h-screen w-full flex flex-col bg-[#9aa8c5]">
  <!-- Navbar (Fixed at Top) -->
  <div class="navbar bg-black text-white px-6 w-full fixed top-0">
    <!-- Left: Past Problems Button -->
    <div class="flex-1">
      <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
        Past Problems
      </button>
    </div>
    <!-- Right: Account Dropdown -->
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
          Account â–¼
        </button>
        <ul class="dropdown-content menu p-2 shadow bg-black text-white rounded-box w-36">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Generate Problems Content -->
  <!-- Add top padding to account for the fixed navbar -->
  <div class="flex flex-col items-center justify-center flex-grow w-full text-center pt-24">
    <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-xl">
      <h1 class="text-5xl font-bold mb-8 text-black">Questions for <%= @category.name %></h1>
      
      <div class="mb-6 border-b pb-4">
        <p class="font-semibold text-lg mb-2">Question: <%= @question[:question] %></p>
        <ul class="list-disc pl-6">
          <% @question[:choices].each do |choice| %>
            <li class="mb-1"><%= choice %></li>
          <% end %>
        </ul>
      </div>
      
      <div class="text-center mt-6">
        <%= link_to "Back to Categories", practice_problems_path, class: "inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors" %>
      </div>
    </div>
  </div>
</div>
