<!-- app/views/practice_problems/generate.html.erb -->
<div class="min-h-screen w-full flex flex-col bg-[#9aa8c5]">
  <!-- Navbar (Fixed at Top) -->
  <div class="navbar bg-black text-white px-6 w-full fixed top-0">
    <!-- Left: Past Problems Button -->
    <div class="flex-1">
      <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition" onclick="window.location='<%= history_path %>'">
        Past Problems
      </button>
    </div>
    <!-- Right: Account Dropdown -->
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
          Account â–¼
        </button>
        <ul class="dropdown-content menu p-2 shadow bg-black text-white rounded-box w-36">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- spacer between navbar and content -->
  <div class="h-24"></div>
  
  <!-- title -->
  <div class="pb-2 text-center">
    <h1 class="text-5xl font-bold text-black">Category: <%= @category.name %></h1>
  </div>
  
  <!-- card for questions and answers -->
  <div class="mt-6 flex flex-col items-center justify-center w-full text-center px-4">
    <div class="bg-gray-800 shadow-md rounded-lg p-8 w-full max-w-4xl text-white border border-gray-600">
      <% if @question && @question[:question] %>
        <h1 class="text-3xl font-bold mb-6">Question: 
          <% if @question[:question].include?("\n") %>
            <%= @question[:question].split("\n\n").first %>
            <p class="text-lg mt-4 text-gray-300"><%= @question[:question].split("\n\n").last %></p>
          <% else %>
            <%= @question[:question] %>
          <% end %>
        </h1>
      <% else %>
        <h1 class="text-3xl font-bold mb-6">Question: Unable to load question</h1>
      <% end %>
      
      <!-- Answer Choices as Clickable Buttons with Black Outline -->
      <div class="flex flex-wrap justify-center gap-4">
        <% (@question[:answer_choices] || []).each do |choice| %>
          <button type="button" class="px-4 py-2 bg-green-500 text-black rounded border border-black hover:bg-green-600 transition-colors">
            <%= choice %>
          </button>
        <% end %>
      </div>
    </div>
    
    <div class="flex flex-col sm:flex-row gap-4 mt-6">
      <%= link_to "Change Category", practice_problems_path, class: "inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors" %>
      <%= link_to "Generate New Problem", generate_practice_problems_path(category_id: @category.id), class: "inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors" %>
    </div>
  </div>
</div>