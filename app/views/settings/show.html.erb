<!-- app/views/settings/index.html.erb -->
<div class="min-h-screen w-full flex flex-col bg-[#9aa8c5]">
  <!-- Navbar (Fixed at Top) -->
  <div class="navbar bg-black text-white px-6 w-full fixed top-0">
    <!-- Left: Problem Select Button -->
    <div class="flex-1">
      <%= link_to "Problem Select", practice_problems_path, class: "btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition" %>
    </div>
    <!-- Right: Account Dropdown -->
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <button class="btn bg-transparent text-white border-transparent hover:border-blue-700 hover:bg-blue-500 hover:text-white transition">
          Account â–¼
        </button>
        <ul class="dropdown-content menu p-2 shadow bg-black text-white rounded-box w-36">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Spacer between navbar and content -->
  <div class="h-24"></div>
  
  <!-- Settings Content -->
  <div class="flex flex-col items-center justify-center flex-grow w-full text-center">
    <div class="w-3/4 mx-auto mt-8 bg-white shadow-md rounded p-8">
      <h1 class="text-center text-3xl font-bold mb-6">Settings</h1>
      <ul class="space-y-4">
        <!-- Email Row -->
        <li class="flex justify-between items-center border-b border-gray-300 pb-2">
          <span class="font-medium text-gray-700">Email</span>
          <span class="text-gray-900">n2rowc@tamu.edu</span>
        </li>
        <!-- Teacher Dropdown Row -->
        <li class="flex justify-between items-center border-b border-gray-300 pb-2">
          <span class="font-medium text-gray-700">Link Teacher</span>
          <%= select_tag :teacher, options_for_select(['Teacher A', 'Teacher B', 'Teacher C']),
                class: "border border-black-300 rounded px-2 py-1" %>
        </li>
        <!-- Authenticate Teacher Row with a toggle switch -->
        <li class="flex justify-between items-center border-b border-gray-300 pb-2">
          <span class="font-medium text-gray-700">Authenticate Teacher</span>
          <label for="auth-teacher" class="relative inline-flex items-center cursor-pointer">
            <input id="auth-teacher" type="checkbox" class="sr-only peer"
              onclick="if(confirm('Are you sure you want to toggle teacher authentication?')) { } else { this.checked = !this.checked; }">
            <div class="w-12 h-7 bg-gray-300 rounded-full peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-300 transition-colors duration-300 peer-checked:bg-blue-600">
              <div class="w-5 h-5 bg-white rounded-full shadow transform transition-transform duration-300 ml-1 mt-1 peer-checked:translate-x-5"></div>
            </div>
          </label>
        </li>
        <!-- Reset Data Row with an always-visible button -->
        <li class="flex justify-between items-center">
          <span class="font-medium text-gray-700">Reset Data</span>
          <button type="button"
                  onclick="if(confirm('Are you sure you want to reset data?') && confirm('This action cannot be undone, are you really sure?')) { alert('Data reset action triggered!'); }"
                  class="px-4 py-2 rounded"
                  style="background-color: #dc2626; color: white;">
            Reset Data
          </button>
        </li>
      </ul>
    </div>
  </div>
</div>
